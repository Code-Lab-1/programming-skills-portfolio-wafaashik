def make_sandwich(*items):
    print("\nI'll make you a delicious sandwich!:")
    for item in items:
        print(f"  adding {item} to your sandwich.")
    print("Your sandwich is ready!")

make_sandwich('chicken', 'cheddar cheese', 'lettuce')
make_sandwich('chicken', 'chilli', 'tomato' , 'cheese','lettuce')
make_sandwich('peanut butter', 'strawberry jam')