#inviting people to dinner
guests = ['Emma Watson', 'Princess Diana', 'Malala yousafzai']

name = guests[0].title()
print(f"{name}, please come to the dinner.")

name = guests[1].title()
print(f"{name}, please come to the dinner.")

name = guests[2].title()
print(f"{name}, please come to the dinner.")

name = guests[2].title()
print(f"\nSorry, {name} can't make it to the dinner.")

del(guests[2])
guests.insert(2, 'sharukhan')

name = guests[0].title()
print(f"\n{name}, please come to the dinner.")

name = guests[1].title()
print(f"{name}, please come to the dinner.")

name = guests[2].title()
print(f"{name}, please come to the dinner.")

#new dinner table wonâ€™t arrive in time for the dinner
print("\nSorry, we can only invite two people to the dinner.")


name = guests.pop()
print(f"Very Sorry, {name.title()} there's no room at the table.")

# inviting the rest of the guest
name = guests[0].title()

print(f"{name}, please come to the dinner.")

name = guests[1].title()

print(f"{name}, please come to the dinner.")

del(guests[0])
del(guests[0])

print(guests)